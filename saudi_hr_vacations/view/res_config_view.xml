<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_support_config_settings_hr_vacation" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.vacation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']/div[hasclass('o_settings_container')]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="join_work_after_vacation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="join_work_after_vacation"/>
                        <div class="text-muted">
                            Select this if its compulsory that employee need to update vacation status to joined after coming back to vacation.
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_account_form_view" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
           <xpath expr="//div[@data-key='hr']" position="inside">
                <div id="accounting_process">
                    <h2>Account Process</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Skip Installment">
                            <div class="o_setting_left_pane">
                                <field name="account_manager"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_manager"/>
                                <div class="text-muted">
                                    Use to show account related details.                             </div>
                            </div>
                        </div>
                    </div>
               </div>
            </xpath>
        </field>
    </record>
</odoo>